<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ll">>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Search Flights"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contact_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="36dp"
        android:text="Contact Details (For E-Ticket/Voucher)"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_details_title"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/phone_number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number1"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/name"
        android:layout_marginLeft="299dp"
        android:layout_marginTop="-161dp"
        android:layout_toRightOf="@id/name"
        android:background="@color/green"
        android:text="Edit" />

    <ImageView
        android:id="@+id/email_logo"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:layout_alignTop="@id/edit_button"
        android:layout_marginLeft="-393dp"
        android:layout_marginTop="37dp"
        android:layout_toRightOf="@id/edit_button"
        android:src="@drawable/email" />

    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/email_logo"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/email_logo"
        android:text=" " />

    <ImageView
        android:id="@+id/phone_logo"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:layout_alignTop="@id/edit_button"
        android:layout_marginLeft="-393dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/edit_button"
        android:src="@drawable/phone" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_text"
        android:layout_alignStart="@id/email_text"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="24dp"
        android:text=" " />

    <TextView
        android:id="@+id/passenger_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number"
        android:layout_marginTop="19dp"
        android:text="Passenger Info"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/passenger_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passenger_info_title"
        android:layout_marginTop="20dp"
        android:text="Same As Contact Details"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Switch
        android:id="@+id/same_as_contact_details_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/passenger_info"
        android:layout_marginLeft="200dp"
        android:layout_toRightOf="@id/passenger_info" />


    <TextView
        android:id="@+id/facilityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/same_as_contact_details_switch"
        android:layout_marginTop="20dp"
        android:text="Facility"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/baggageOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/facilityLabel"
        android:text="Baggage - Add extra baggage"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/baggageOption"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-15dp"
        android:layout_toRightOf="@id/baggageOption"
        android:background="@android:color/transparent"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/extraProtectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/baggageOption"
        android:layout_marginTop="30dp"
        android:text="Extra Protection"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/travelInsuranceCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/extraProtectionLabel"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="7dp"
        android:checked="true"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/travelInsuranceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/travelInsuranceCheckbox"
        android:layout_alignBottom="@id/travelInsuranceCheckbox"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-10dp"
        android:layout_toRightOf="@id/travelInsuranceCheckbox"
        android:text="Travel Insurance"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/insuranceCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/travelInsuranceLabel"
        android:layout_alignBottom="@id/travelInsuranceLabel"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/travelInsuranceLabel"
        android:text="₹350"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/selectSeatLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/travelInsuranceCheckbox"
        android:layout_marginTop="66dp"
        android:text="Subtotal"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/selectSeatButton"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_alignTop="@id/selectSeatLabel"
        android:layout_alignBottom="@id/selectSeatLabel"
        android:layout_marginLeft="147dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="-66dp"
        android:layout_toRightOf="@id/selectSeatLabel"
        android:background="@color/green"
        android:text="select preferences"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/totalCostLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectSeatLabel"
        android:layout_marginTop="22dp"
        android:text="Total: ₹0"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>
